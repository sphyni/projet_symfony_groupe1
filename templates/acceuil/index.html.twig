{% extends 'layout.html.twig' %}
{% block title %}
<title>Accueil!</title>
{% endblock %}

{% block main %}


    <div class="accueil">
        <h1>Sorties</h1>
        {% for sortie in sorties %}
            <table>
                <thead>
                <tr>
                    <th>Nom de la sortie</th>
                    <th>Date de la sortie</th>
                    <th>Clôturé</th>
                    <th>Inscription/Places</th>
                    <th>Etat</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <td>{{ sortie.getNom() }}</td>


                <td>{{ sortie.getNbInscriptionsMax() }}</td>

                <td><a href="#">Afficher</a></td>
                </tbody>
            </table>



    {% endfor %}
</div>
{% endblock %}
