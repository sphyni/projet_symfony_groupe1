{% block main %}
    <table>
        <tr>
            <td> <strong>villes</strong> </td>
            <td> <strong>codes postal</strong> </td>
            <td> <strong>Actions</strong> </td>
        </tr>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.getNom() }}</td>
                <td>{{ ville.getCodePostal() }}</td>
                <td><a href="{{ url("ville_edit", {'id':ville.getId()}) }}">Modifier</a> - <a href="{{ url("ville_delete", {'id':ville.getId()}) }}">Supprimer</a> </td>
            </tr>
        {% endfor %}
        <tr>
            <td>
                {{ form_start (villeForm) }}
                {{ form_widget(villeForm) }}
            </td>
            <td><button type="submit">Enregistrer</button> </td>
            {{ form_end(villeForm) }}
        </tr>
    </table>
{% endblock %}